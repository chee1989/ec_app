<div class='container p-5'>
  <h1>お気に入り一覧</h1>

  <div class='mb-3'>
    <table class='table table-hover'>
      <thead class='thead-default'>
        <tr>
          <th><%= Product.human_attribute_name(:title) %></th>
          <th><%= Product.human_attribute_name(:price) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% if @favorite_list.present? %>
        <% @favorite_list.each do |li| %>
        <tr>
          <td><%= li.title %></td>
          <td><%= li.price %></td>
          <td><%= li.created_at.strftime('%Y年%m月%d日') %></td>
          <td>
            <%= link_to '詳細', product_path(li), class: 'btn btn-secondary' %>
          </td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>