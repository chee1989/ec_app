<div class='container p-5'>
  <h1><%= @category.name %>カテゴリ商品一覧</h1>

  <div class='mb-3'>
    <div class='my-2 float-right'>
      <%= paginate @products %>
      <%= page_entries_info @products %>
    </div>
    <table class='table table-hover'>
      <thead class='thead-default'>
        <tr>
          <th><%= Product.human_attribute_name(:title) %></th>
          <th><%= Product.human_attribute_name(:price) %></th>
          <th><%= Product.human_attribute_name(:created_at) %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= product.created_at.strftime('%Y年%m月%d日') %></td>
          <td>
            <%= link_to '詳細', product_path, class: 'btn btn-secondary' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  