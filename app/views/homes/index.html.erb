<main role="main" class="container-fluid p-5">
  <div class="row">
    <div class="col-md-8 blog-main">
      <h3 class="pb-4 mb-4 font-italic border-bottom">
        おすすめ商品
      </h3>
      <div class="container-fluid">
        <div class="row">
          <% @samples.each do |sample| %>
            <div class="col-6 col-md-4">
              <div class="card my-2">
                <% if sample.images.attached? %>
                  <%= image_tag(sample.images.first, class:"card-img-top") %>
                <% else %>
                  <img src="/assets/sample.jpeg" class="card-img-top">
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= sample.title %></h5>
                  <p class="card-text"><%= sample.price %>円</p>
                  <div class="row">
                    <%= link_to '商品詳細', product_path(sample), class: "btn btn-outline-secondary mr-2" %>
                    <button class="btn btn-outline-secondary"><i class="fas fa-heart"></i> <%= sample.likes.count %></button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <br>
      <h3 class="pb-4 mb-4 font-italic border-bottom">
        新着商品
      </h3>
      <div class="container-fluid">
        <div class="row">
          <% @new_products.each do |new_pro| %>
            <div class="col-6 col-md-4">
              <div class="card my-2">
                <% if new_pro.images.attached? %>
                  <%= image_tag(new_pro.images.first, class:"card-img-top") %>
                <% else %>
                  <img src="/assets/sample.jpeg" class="card-img-top">
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= new_pro.title %></h5>
                  <p class="card-text"><%= new_pro.price %>円</p>
                  <div class="row">
                    <%= link_to '商品詳細', product_path(new_pro), class: "btn btn-outline-secondary mr-2" %>
                    <div class="btn btn-outline-secondary mr-2"><i class="fas fa-heart"></i> <%= new_pro.likes.count %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div><!-- /.blog-main -->

    <aside class="col-md-4 blog-sidebar">
      <div class="p-4 mb-3 bg-light rounded">
        <h4 class="font-italic">About</h4>
        <p class="mb-0">Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
      </div>

      <div class="p-4">
        <h4 class="font-italic">カテゴリ一覧</h4>
        <% @categories.each do |category| %>
        <ol class="list-unstyled mb-0">
          <li><%= link_to category.name, category_path(category) %>(<%= category.products.count %>個の商品)</li>
        </ol>
        <% end %>
      </div>

      <div class="p-4">
        <h4 class="font-italic">Elsewhere</h4>
        <ol class="list-unstyled">
          <li><a href="#">GitHub</a></li>
          <li><a href="#">Twitter</a></li>
          <li><a href="#">Facebook</a></li>
        </ol>
      </div>
    </aside><!-- /.blog-sidebar -->
  </div><!-- /.row -->
</main><!-- /.container -->
