<br><%= form_tag products_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>
  <%= hidden_field_tag :id, params[:id] %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.application.credentials.stripe_publishable_key %>" data-description="商品購入" data-amount="<%= @product[:price] %>" data-locale="ja" data-name="サンプルショップ" data-currency="JPY" data-email="<%= current_user.email %>" data-label="購入する"></script>
<% end %>
