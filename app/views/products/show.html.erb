<div class='container mt-5'>
  <h1><%= @product.title %></h1>

  <table class='table table-hover'>
    <tbody>
      <tr>
        <th><%= Product.human_attribute_name(:category_name) %></th>
        <td><%= @product.category_name %></td>
      </tr>
      <tr>
        <th><%= Product.human_attribute_name(:price) %></th>
        <td><%= @product.price %></td>
      </tr>
      <tr>
        <th><%= Product.human_attribute_name(:introduction) %></th>
        <td><%= @product.introduction %></td>
      </tr>
      <tr>
        <th><%= Product.human_attribute_name(:user_name) %></th>
        <td><%= @product.user_name %></td>
      </tr>
      <% if @product.images.attached?  %>
        <tr>
          <th><%= Product.human_attribute_name(:image) %></th>
          <td>
            <% @product.images.each do |img| %>
              <%= link_to img, 'data-lightbox' => img do %>
              <%= image_tag(img, width:150) %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      <tr>
        <th><%= Product.human_attribute_name(:created_at) %></th>
        <td><%= @product.created_at.strftime('%Y年%m月%d日') %></td>
      </tr>
      <tr>
        <th>いいね</th>
        <td><div id="like-btn-<%= @product.id %>"><%= render 'likes/like', product: @product %></div>
      </tr>
      <tr>
        <th>お気に入り</th>
        <td><%= render @product %></td></div>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <div class="col text-center">
      <%= render :partial => "new" %>
    </div>
  </div>
</div>

<link href='https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css' rel='stylesheet'>
<script src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js'>
</script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js' type='text/javascript'>
</script>

