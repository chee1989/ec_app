<div class='row mt-5'>
  <%= render partial: 'layouts/admin/side_menu' %>
  <div class='col-xs-6 col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main'>
    <div class='container card p-5'>
      <h1>問い合わせ一覧</h1>

      <div class='mb-3 mt-5'>
        <table class='table table-hover'>
          <thead class='thead-default'>
            <tr>
              <th><%= Contact.human_attribute_name(:title) %></th>
              <th><%= Contact.human_attribute_name(:content) %></th>
              <th><%= Contact.human_attribute_name(:user_id) %></th>
              <th><%= Contact.human_attribute_name(:user_name) %></th>
              <th><%= Contact.human_attribute_name(:user_email) %></th>
              <th><%= Contact.human_attribute_name(:created_at) %></th>
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.title %></td>
              <td><%= contact.content %></td>
              <td><%= contact.user_id %></td>
              <td><%= contact.user_name %></td>
              <td><%= contact.user_email %></td>
              <td><%= contact.created_at.strftime('%Y年%m月%d日') %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

